<Window x:Class="AKG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AKG"
        mc:Ignorable="d"
        Name="window" Title="MainWindow" WindowState="Maximized" Height="450" Width="800" KeyDown="window_KeyDown">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF484545" Offset="0.767"/>
                <GradientStop Color="#FF8E8A8A" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Canvas Name="canvas">

        </Canvas>
        <Label Name="lbRotateX" Content="0" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <Label Name="lbRotateY" Content="0" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top"/>
        <Label Name="lbRotateZ" Content="0" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>
        <Label Name="lbZoom" Content="1" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
